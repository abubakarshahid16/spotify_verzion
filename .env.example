# Flask Application Settings
SECRET_KEY=your-secure-secret-key-change-this
FLASK_ENV=development
FLASK_APP=app.py

# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Verizon API Credentials
# Get these from Verizon API Sandbox environment
VERIZON_API_KEY=your-verizon-api-key
VERIZON_SANDBOX_URL=https://sandbox.api.verizon.com

# For development/testing when Verizon API is not available
# Set to "true" to simulate successful message sending
SIMULATE_VERIZON_SUCCESS=false 